<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	<bean id="localDatasource" class="spring.beans.Datasource">
		<property name="url" value="localhost:5432/moviedb"></property>
		<property name="user" value="moviedb"></property>
		<property name="password" value="password"></property>
	</bean>
	<bean id="awsDatasource" class="spring.beans.Datasource">
		<property name="url" value="aws-domain-url.com:5432/moviedb"></property>
		<property name="user" value="moviedb"></property>
		<property name="password" value="password"></property>
	</bean>
	<bean name="localRepo localRepository" class="spring.beans.Repository">
		<property name="datasource" ref="localDatasource"></property>
	</bean>
	<bean name="awsRepo" class="spring.beans.Repository">
		<property name="datasource" ref="awsDatasource"></property>
	</bean>
	<bean id="localService" class="spring.beans.Service">
		<constructor-arg name="repository" ref="localRepository"></constructor-arg>
	</bean>
	<bean id="awsService" class="spring.beans.Service">
		<constructor-arg name="repository" ref="awsRepo"></constructor-arg>
	</bean>
</beans>
